{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    },
    {
      "src": "src/ui/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "src/ui/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9",
    "PYTHONDONTWRITEBYTECODE": "1"
  }
} 