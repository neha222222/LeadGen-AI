{
  "version": 2,
  "functions": {
    "main.py": {
      "runtime": "python3.9"
    }
  },
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    },
    {
      "src": "src/ui/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "src/ui/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1"
  }
} 